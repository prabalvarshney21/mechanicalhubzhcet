<%- include('partials/header') %>

<section class="hero bg-gradient-to-br from-black to-blue-900 text-white py-16 px-4 text-center">
  <h1 class="text-4xl font-bold mb-4"><%= subject %> â€” Unit <%= unit %> Files</h1>
  <p class="text-lg max-w-3xl mx-auto">Download available notes for Unit <%= unit %>.</p>
</section>

<section class="bg-black text-white py-12 px-4">
  <h2 class="text-3xl font-semibold text-center text-blue-500 mb-6">Files</h2>
  <% if (files.length) { %>
    <ul class="list-disc list-inside space-y-2 max-w-2xl mx-auto">
      <% files.forEach(file => { %>
        <li>
          <a href="/uploads/notes/<%= year %>/<%= sem %>/<%= encodeURIComponent(subject) %>/Unit<%= unit %>/<%= file %>"
             class="text-blue-400 hover:underline" download><%= file %></a>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p class="text-center text-gray-400">No files uploaded for this unit yet.</p>
  <% } %>
  <div class="mt-8 text-center">
    <a href="/notes/<%= year %>/<%= sem %>/<%= encodeURIComponent(subject) %>"
       class="px-6 py-3 bg-blue-600 hover:bg-blue-500 rounded-lg text-white">Back to Units</a>
  </div>
</section>

<%- include('partials/footer') %>
