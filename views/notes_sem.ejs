<%- include('partials/header') %>

<!-- Page Hero for Semester -->
<section class="hero bg-gradient-to-br from-black to-blue-900 text-white py-16 px-4 text-center">
  <h1 class="text-4xl font-bold mb-4"><%= year %> Year — <%= sem.replace(/sem/, 'Sem ') %> Subjects</h1>
  <p class="text-lg max-w-3xl mx-auto">Browse lecture notes for <%= year %> <%= sem.replace(/sem/, 'Sem ') %>.</p>
</section>

<!-- Subject Selection -->
<section class="bg-black py-12 px-4">
  <h2 class="text-3xl font-semibold text-center text-blue-500 mb-6">Select Subject — <%= sem.replace(/sem/, 'Sem ') %></h2>
  <div class="flex flex-wrap justify-center gap-4">
    <% subjects[sem].forEach(sub => { %>
      <a 
        href="/notes/<%= year %>/<%= sem %>/<%= encodeURIComponent(sub) %>" 
        class="px-6 py-3 bg-blue-600 hover:bg-blue-500 rounded-lg text-white"
      >
        <%= sub %>
      </a>
    <% }) %>
  </div>
</section>

<%- include('partials/footer') %>
