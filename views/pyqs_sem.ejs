<%- include('partials/header') %>
<div class="main-container text-center space-y-6">
  <h2 class="text-2xl font-semibold"><%= year %> Year - <%= sem.toUpperCase() %> - PYQs Subjects</h2>
  <div class="flex flex-wrap gap-4 justify-center">
    <% if (Array.isArray(subjects[sem])) { %>
      <% subjects[sem].forEach(function(sub) { %>
        <a href="/pyqs/<%= year %>/<%= sem %>/<%= encodeURIComponent(sub) %>" 
           class="px-6 py-3 bg-blue-600 hover:bg-blue-500 rounded-lg text-white shadow text-center min-w-[200px] text-sm">
          <%= sub %>
        </a>
      <% }) %>
    <% } else { %>
      <p class="text-blue-300">No subjects found for this semester.</p>
    <% } %>
  </div>
</div>
<%- include('partials/footer') %>