<%- include('partials/header') %>
<div class="bg-black bg-opacity-90 rounded-2xl p-6 max-w-md mx-auto space-y-4">
  <h2 class="text-2xl font-semibold">Login</h2>
  <% if (typeof error !== 'undefined' && error) { %>
    <p class="text-red-400"><%= error %></p>
  <% } %>
  <form action="/login" method="POST" class="space-y-4">
    <input type="text" name="username" placeholder="Username" class="w-full px-3 py-2 bg-black border border-blue-700 rounded-lg text-blue-200" required>
    <input type="password" name="password" placeholder="Password" class="w-full px-3 py-2 bg-black border border-blue-700 rounded-lg text-blue-200" required>
    <button type="submit" class="px-6 py-2 bg-blue-800 hover:bg-blue-700 rounded-lg">Login</button>
  </form>
</div>
<%- include('partials/footer') %>