<%- include('partials/header') %>

<!-- Page Hero for Subject -->
<section class="hero bg-gradient-to-br from-black to-blue-900 text-white py-16 px-4 text-center">
  <h1 class="text-4xl font-bold mb-4"><%= subject %> — <%= sem.replace(/sem/, 'Sem ') %> Notes</h1>
  <p class="text-lg max-w-3xl mx-auto">Select a unit below to view or download notes for <%= subject %>.</p>
</section>

<!-- Unit Selection -->
<section class="bg-black py-12 px-4">
  <h2 class="text-3xl font-semibold text-center text-blue-500 mb-6">Select Unit — <%= subject %></h2>
  <div class="flex flex-wrap justify-center gap-4">
    <% for (let i = 1; i <= 4; i++) { %>
      <a 
        href="/notes/<%= year %>/<%= sem %>/<%= encodeURIComponent(subject) %>?unit=<%= i %>" 
        class="px-6 py-3 bg-blue-600 hover:bg-blue-500 rounded-lg text-white"
      >
        Unit <%= i %>
      </a>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>
