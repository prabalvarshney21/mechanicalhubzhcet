<%- include('partials/header') %>

<section class="hero bg-gradient-to-br from-black to-blue-900 text-white py-16 px-4 text-center">
  <h1 class="text-4xl lg:text-5xl font-bold mb-4"><%= subject %> — <%= sem.replace('sem', 'Semester ') %> Notes</h1>
  <p class="text-lg lg:text-xl max-w-3xl mx-auto">Select a unit below to view or download notes for <%= subject %>.</p>
</section>

<section class="bg-black py-16 px-4">
  <h2 class="text-3xl font-semibold text-center text-blue-400 mb-12">Select an Option</h2>
  <div class="max-w-5xl mx-auto flex flex-wrap justify-center gap-8">
    
    <% for (let i = 1; i <= 4; i++) { %>
      <a 
        href="/notes/<%= year %>/<%= sem %>/<%= encodeURIComponent(subject) %>?unit=<%= i %>" 
        class="group block w-full sm:w-56 text-center bg-gray-900/50 p-8 rounded-xl border-2 border-blue-900 hover:border-blue-500 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-blue-600/20"
      >
        <div class="text-5xl mb-4 transition-transform duration-300 group-hover:scale-110">
          📁
        </div>
        <h3 class="text-2xl font-bold text-white">
          Unit <%= i %>
        </h3>
      </a>
    <% } %>

    <a 
      href="/uploads/syllabus/<%= year %>/<%= sem %>/<%= encodeURIComponent(subject) %>.pdf" 
      target="_blank"
      class="group block w-full sm:w-56 text-center bg-gray-900/50 p-8 rounded-xl border-2 border-blue-900 hover:border-blue-500 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-blue-600/20"
    >
      <div class="text-5xl mb-4 transition-transform duration-300 group-hover:scale-110">
        📜
      </div>
      <h3 class="text-2xl font-bold text-white">
        Syllabus
      </h3>
    </a>

  </div>
</section>

<%- include('partials/footer') %>