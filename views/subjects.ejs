<%- include('partials/header') %>

<!-- Page Hero for Notes Subjects -->
<section class="hero bg-gradient-to-br from-black to-blue-900 text-white py-16 px-4 text-center">
  <h1 class="text-4xl font-bold mb-4">
    <%= year.charAt(0).toUpperCase() + year.slice(1) %> Year Notes
  </h1>
  <p class="text-lg max-w-3xl mx-auto">Select your subject to view the notes.</p>
</section>

<!-- Subject Selection Section -->
<section class="py-12 px-4 bg-black text-white text-center">
  <h2 class="text-3xl font-semibold mb-6 text-blue-400">
    Select Subject â€“ <%= year.charAt(0).toUpperCase() + year.slice(1) %> Year, <%= sem.replace('sem', 'Sem ') %>
  </h2>
  <div class="flex flex-col sm:flex-row flex-wrap justify-center gap-4 max-w-5xl mx-auto">
    <% subjects[sem].forEach(subject => { %>
      <a 
        href="/notes/<%= year %>/<%= sem %>/<%= encodeURIComponent(subject) %>" 
        class="px-6 py-3 bg-blue-600 hover:bg-blue-500 rounded-lg text-white font-medium text-center shadow-lg"
        style="min-width: 200px"
      >
        <%= subject %>
      </a>
    <% }) %>
  </div>
</section>

<%- include('partials/footer') %>
