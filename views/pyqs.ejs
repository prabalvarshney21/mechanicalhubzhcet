<%- include('partials/header') %>

<%
  // Helper function to assign an icon based on the subject name
  function getIconForSubject(subjectName) {
    const s = subjectName.toLowerCase();
    const iconMap = {
      'math': '📈',
      'mechanics': '⚙️', 'solid': '⚙️', 'kinematics': '⚙️', 'dynamics': '⚙️', 'vibration': '⚙️',
      'fluid': '💧',
      'thermo': '🔥', 'heat': '🔥', 'energy': '🔥',
      'design': '📐',
      'drawing': '📏',
      'material': '💎',
      'manufacturing': '🏭',
      'electrical': '⚡️',
      'lab': '🧪',
      'project': '🏗️', 'training': '🏗️', 'internship': '🏗️',
      'industrial': '📊', 'management': '📊', 'economy': '📊',
      'numerical': '🧮',
      'colloquium': '🗣️',
    };
    for (const key in iconMap) {
      if (s.includes(key)) return iconMap[key];
    }
    return '📖'; // Default icon for electives or others
  }
%>

<% /* Page Hero - dynamic title */ %>
<% if (typeof year === 'undefined') { %>
<section class="hero bg-gradient-to-br from-black to-blue-900 text-white py-16 px-4 text-center">
  <h1 class="text-4xl lg:text-5xl font-bold mb-4">Previous Year Questions</h1>
  <p class="text-lg lg:text-xl max-w-3xl mx-auto">Access extensive collections of past exam papers for effective preparation.</p>
</section>
<% } else if (typeof sem === 'undefined') { %>
<section class="hero bg-gradient-to-br from-black to-blue-900 text-white py-16 px-4 text-center">
  <h1 class="text-4xl lg:text-5xl font-bold mb-4"><%= year.charAt(0).toUpperCase() + year.slice(1) %> Year PYQs</h1>
  <p class="text-lg lg:text-xl max-w-3xl mx-auto">Select your semester to view the papers.</p>
</section>
<% } else { %>
<section class="hero bg-gradient-to-br from-black to-blue-900 text-white py-16 px-4 text-center">
    <h1 class="text-4xl lg:text-5xl font-bold mb-4"><%= sem.replace('sem','Semester ') %> PYQs</h1>
    <p class="text-lg lg:text-xl max-w-3xl mx-auto"><%= year.charAt(0).toUpperCase() + year.slice(1) %> Year</p>
</section>
<% } %>


<% /* Redesigned Dynamic Selection Section */ %>
<section class="py-16 px-4 bg-black text-white text-center">
  <h2 class="text-3xl font-semibold mb-12 text-blue-400">
    <% if (typeof year === 'undefined') { %>
      Select Your Year
    <% } else if (typeof sem === 'undefined') { %>
      Select Semester – <%= year.charAt(0).toUpperCase() + year.slice(1) %> Year
    <% } else { %>
      Select Subject – <%= sem.replace('sem','Sem ') %>
    <% } %>
  </h2>

  <div class="max-w-7xl mx-auto">
    <% if (typeof year === 'undefined') { %>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <% ['2nd', '3rd', '4th'].forEach(y => { %>
          <a href="/pyqs/<%= y %>" class="group block bg-gray-900/50 p-8 rounded-xl border-2 border-blue-900 hover:border-blue-500 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-blue-600/20">
            <div class="text-5xl mb-4 transition-transform duration-300 group-hover:scale-110">🎓</div>
            <h3 class="text-2xl font-bold text-white"><%= y.charAt(0).toUpperCase() + y.slice(1) %> Year</h3>
          </a>
        <% }) %>
      </div>
    <% } else if (typeof sem === 'undefined') { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-8 max-w-3xl mx-auto">
        <% semesters[year].forEach(semItem => { %>
          <a href="/pyqs/<%= year %>/<%= semItem %>" class="group block bg-gray-900/50 p-8 rounded-xl border-2 border-blue-900 hover:border-blue-500 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-blue-600/20">
            <div class="text-5xl mb-4 transition-transform duration-300 group-hover:scale-110">📚</div>
            <h3 class="text-2xl font-bold text-white"><%= semItem.replace('sem','Semester ') %></h3>
          </a>
        <% }) %>
      </div>
    <% } else { %>
      <div class="flex flex-wrap justify-center gap-6">
        <% subjects[sem].forEach(subject => { %>
          <a href="/pyqs/<%= year %>/<%= sem %>/<%= encodeURIComponent(subject) %>" class="group block w-full sm:w-64 text-center bg-gray-900/50 p-6 rounded-xl border-2 border-blue-900 hover:border-blue-500 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:shadow-blue-600/20">
            <div class="text-5xl mb-4 transition-transform duration-300 group-hover:scale-110">
              <%= getIconForSubject(subject) %>
            </div>
            <h3 class="text-lg font-semibold text-white leading-snug"><%= subject %></h3>
          </a>
        <% }) %>
      </div>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>