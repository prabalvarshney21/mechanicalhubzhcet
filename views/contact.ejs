<%- include('partials/header') %>

<% if (success) { %>
  <div id="popup" class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transition-opacity duration-300">
    <%= success %>
  </div>
<% } %>
<% if (error) { %>
  <div id="popup" class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-red-500 text-white px-6 py-3 rounded-lg shadow-lg z-50 transition-opacity duration-300">
    <%= error %>
  </div>
<% } %>

<% if (success || error) { %>
  <script>
    setTimeout(() => {
      const popup = document.getElementById('popup');
      if (popup) {
        popup.style.opacity = '0';
        setTimeout(() => popup.remove(), 300);
      }
    }, 4000);
  </script>
<% } %>

