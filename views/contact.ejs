<%- include('partials/header') %>

<% if (success) { %>
  <div id="popup" class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-green-500 text-white px-4 py-2 rounded shadow-lg z-50">
    <%= success %>
  </div>
  <script>
    setTimeout(() => {
      const popup = document.getElementById('popup');
      if (popup) popup.remove();
    }, 3000);
  </script>
<% } %>

<div class="bg-black bg-opacity-90 rounded-2xl p-6 max-w-lg mx-auto space-y-4">
  <h2 class="text-2xl font-semibold">Contact Us</h2>
  <form action="/contact" method="POST" class="space-y-4">
    <input type="text" name="name" placeholder="Your Name" class="w-full px-3 py-2 bg-black border border-blue-700 rounded-lg text-blue-200" required>
    <input type="email" name="email" placeholder="Email" class="w-full px-3 py-2 bg-black border border-blue-700 rounded-lg text-blue-200" required>
    <textarea name="message" rows="4" placeholder="Message" class="w-full px-3 py-2 bg-black border border-blue-700 rounded-lg text-blue-200" required></textarea>
    <button type="submit" class="px-6 py-2 bg-blue-800 hover:bg-blue-700 rounded-lg">Send</button>
  </form>
</div>

<%- include('partials/footer') %>
